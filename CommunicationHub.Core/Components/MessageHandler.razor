
<div id="message-handler-component" class="align-items-center d-flex flex-column h-100 justify-content-center p-5">
    <MudPaper Elevation="3" Height="600px">
        <div class="p-4">
            <MudText Typo="Typo.h4" Class="pb-2" Color="Color.Primary">Communications Hup</MudText>

            <MudText Typo="Typo.body1" Class="pb-10">Please enter your message to us:</MudText>
            <EditForm Model="@this" class="pb-10">
                <FluentValidationValidator @ref="fluentValidator" />
                <div style="height: 140px;">
                    <MudTextField Text="@Message" T="string" TextChanged="MessageChanged" Lines="5" Variant="Variant.Outlined" Label="Message" Margin="Margin.Dense" For="@(() => Message)"></MudTextField>
                </div>
                <div class="d-flex justify-content-end pt-4">
                    <MudButton Color="Color.Primary" DisableElevation="true" OnClick="@(() => SendMessage())" Variant="Variant.Filled">Send</MudButton>
                </div>
            </EditForm>

            @if (messageSent)
            {
                <MudText Typo="Typo.h6">Validated message:</MudText>
                <MudText Typo="Typo.body1">@newMessage</MudText>
            }
        </div>
    </MudPaper>
</div>